<!-- app/views/listings/index.html.erb -->
<h1>SaaS Listings</h1>

<% @listings.each do |listing| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= listing.name %></h5>
      <p class="card-text"><%= truncate(listing.description, length: 100) %></p>
      <p class="card-text">
        <small class="text-muted">
          Price: $<%= listing.price %> | Commission: <%= listing.commission %>%
        </small>
      </p>
      <%= link_to 'View Details', listing, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= paginate @listings %>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-success' %>
<% end %>